{{>layouts/header}}
    <section class="bg-primary-subtle" style="height: auto;min-height: 1000px;border-bottom-width: 1px;border-bottom-color: #ffffff;background: var(--bs-danger-bg-subtle);">
        <div class="table-responsive" style="margin: auto;width: 600px;max-width: 600px;margin-top: 5%;min-width: 600px;">
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align: center;background: #738aff;width: 60%;font-weight: bold;color: var(--bs-white);min-width: 60%;max-width: 60%;font-size: 20px;" colspan="4">게시글 등록</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align: center;max-width: 80px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 80px;min-width: 80px;">제목</td>
                        <td style="background: #75adff;" colspan="4"><input type="text" style="background: #75adff;color: var(--bs-white);border: 1px solid var(--bs-white);height: 25px;min-height: 25px;max-height: 25px;width: 500px;max-width: 500px;min-width: 500px;"></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">내용</td>
                        <td style="background: #75adff;" colspan="4"><textarea style="color: var(--bs-white);background: #75adff;border-color: var(--bs-white);width: 500px;max-width: 500px;min-width: 500px;height: 300px;"></textarea></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 80px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 80px;min-width: 80px;">닉네임</td>
                        <td style="background: #75adff;width: 100px;min-width: 100px;max-width: 100px;"><input type="text" style="background: #75adff;color: var(--bs-white);border: 1px solid var(--bs-white);height: 25px;min-height: 25px;max-height: 25px;width: 200px;max-width: 200px;min-width: 200px;"></td>
                        <td style="text-align: center;max-width: 40px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 80px;min-width: 40px;">비밀번호</td>
                        <td style="background: #75adff;width: 100px;min-width: 100px;max-width: 100px;"><input type="text" style="background: #75adff;color: var(--bs-white);border: 1px solid var(--bs-white);height: 25px;min-height: 25px;max-height: 25px;width: 200px;max-width: 200px;min-width: 200px;"></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);" colspan="4"><button class="btn btn-success" type="button">등록하기</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{{>layouts/footer}}