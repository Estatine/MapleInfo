{{>layouts/header}}
    <section class="bg-primary-subtle" style="height: auto;min-height: 1000px;border-bottom-width: 1px;border-bottom-color: #ffffff;background: var(--bs-danger-bg-subtle);">
        <div class="table-responsive" style="margin: auto;width: 450px;max-width: 450px;margin-top: 5%;min-width: 450px;">
            <form action="/gc-calc-res" method="post">
                <table class="table">
                    <thead>
                    <tr>
                        <th style="text-align: center;background: #738aff;width: 60%;font-weight: bold;color: var(--bs-white);min-width: 60%;max-width: 60%;font-size: 20px;" colspan="2">황금 마차 계산기</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="text-align: center;max-width: 140px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 140px;min-width: 140px;">이벤트 시작일</td>
                        <td style="background: #75adff;width: 300px;min-width: 300px;max-width: 300px;"><input name="startDate" type="date" style="background: #75adff;color: var(--bs-white);border: 1px solid var(--bs-white);width: 110px;min-width: 110px;max-width: 110px;" value="2023-08-31"></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">이벤트 종료일</td>
                        <td style="background: #75adff;"><input name="finishDate" type="date" style="background: #75adff;color: var(--bs-white);border: 1px solid var(--bs-white);width: 110px;min-width: 110px;max-width: 110px;" value="2023-12-20"></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">마지막 보상 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-weight: bold;line-height: 22px;font-size: 18px;"><input name="lastRewordNum" class="border rounded-0 border-1 border-white" type="number" style="max-height: 23px;background: #75adff;color: rgb(255,255,255);font-weight: bold;width: 110px;max-width: 110px;min-width: 110px;" min="0" max="150" value="98" step="1"></td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">현재 출석 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-weight: bold;line-height: 22px;font-size: 18px;"><input name="crtCheckNum" class="border rounded-0 border-1 border-white" type="number" style="max-height: 23px;background: #75adff;color: rgb(255,255,255);font-weight: bold;width: 110px;max-width: 110px;min-width: 110px;" min="0" max="150" value="0" step="1"></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);" colspan="2"><button class="btn btn-success" type="submit">계산하기</button></td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div class="table-responsive" style="margin: auto;width: 450px;max-width: 450px;margin-top: 5%;min-width: 450px;">
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align: center;background: #738aff;width: 60%;font-weight: bold;color: var(--bs-white);min-width: 60%;max-width: 60%;font-size: 20px;" colspan="2">황금 마차 계산 결과</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align: center;max-width: 150px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 150px;min-width: 140px;" colspan="2">설정 기간 :&nbsp;{{std.startDate}} ~ {{std.finishDate}}</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">전체 출석 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-weight: bold;line-height: 22px;font-size: 16px;">{{std.totDate}}&nbsp;회</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 220px;background: #738aff;font-weight: bold;color: var(--bs-white);width: 220px;min-width: 220px;">현재 출석 횟수</td>
                        <td style="background: #75adff;width: 80px;max-width: 80px;min-width: 80px;color: var(--bs-white);font-size: 16px;font-weight: bold;">{{std.crtCheckNum}}&nbsp;회</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">현재 빠진 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-weight: bold;line-height: 22px;font-size: 16px;">{{missDate}}&nbsp;회</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">현재 여유 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-weight: bold;line-height: 22px;font-size: 16px;">{{spareDate}}&nbsp;회</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">현재 풀 출석시 모든 보상 수령 가능 여부</td>
                        <td style="background: #75adff;color: var(--bs-white);font-size: 16px;font-weight: bold;">{{getAllReword}}</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">모든 보상 수령시 필요한 패스 사용 횟수</td>
                        <td style="background: #75adff;color: var(--bs-white);font-size: 16px;font-weight: bold;">{{usePassCnt}}&nbsp;회</td>
                    </tr>
                    <tr>
                        <td style="text-align: center;max-width: 200px;background: #738aff;font-weight: bold;color: var(--bs-white);">모든 보상 수령시 필요한 패스 사용 비용</td>
                        <td style="background: #75adff;color: var(--bs-white);font-size: 16px;font-weight: bold;">{{usePassPrice}}&nbsp;메포</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{{>layouts/footer}}